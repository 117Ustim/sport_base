// Import global variables and mixins
@import './styles/variables';
@import './styles/mixins';

// Import reset and base styles
@import './zeroing.scss';
@import './style.scss';

// Global styles
body, html {
  background-color: $color-bg;
  font-family: 'Nunito Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

// All component styles are now in CSS Modules
// No need to import individual component styles here